{
  "name": "living-environment-web",
  "version": "0.0.0",
  "description": "人居环境前端项目",
  "private": true,
  "scripts": {
    "start": "lerna run start --parallel",
    "doc": "lerna run docs:dev --scope docs",
    "build": "lerna run build --parallel",
    "clean": "rimraf node_modules **/*/node_modules",
    "start:7000": "lerna run start --parallel --scope micro-framework",
    "build:7000": "lerna run build --parallel --scope micro-framework",
    "start:7001": "lerna run start --parallel --scope large-screen",
    "build:7001": "lerna run build --parallel --scope large-screen",
    "start:7002": "lerna run start --parallel --scope excrement-resource",
    "build:7002": "lerna run build --parallel --scope excrement-resource",
    "start:7004": "lerna run start --parallel --scope system-background",
    "build:7004": "lerna run build --parallel --scope system-background",
    "start:8000": "lerna run start --parallel --scope main-framework",
    "build:8000": "lerna run build --parallel --scope main-framework",
    "starts:8000": "lerna run start --parallel --scope main-framework --scope micro-framework --scope excrement-resource",
    "start:8001": "lerna run start --parallel --scope cxgh-background"
  },
  "devDependencies": {
    "@lerna-lite/cli": "^1.11.1",
    "@lerna-lite/run": "^1.11.1",
    "rimraf": "^3.0.2"
  },
  "dependencies": {}
}